doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='#{pathToAssets}/docs/favicon.ico')
    title OSMBC
    // Bootstrap core CSS
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    // Fixed navbar
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') OSMBC
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/article/create') Collect
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Article 
                span.caret
              ul.dropdown-menu(role='menu')
                li.dropdown-header Orphaned Article
                if (listOfOrphanBlog) 
                  for blog in listOfOrphanBlog
                    li
                      a(href="/article/list?blog=#{blog}") #{blog}
                li.divider
                li.dropdown-header Special Search
                li
                  a(href='/article/list?markdown=') No Text
                li
                  a(href='/article/list?blog=') No Reference Blog
                li
                  a(href='/article/list') All
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | WN 
                span.caret
              ul.dropdown-menu(role='menu')
                li.dropdown-header List
                li
                  a(href="/blog/list?status=open") open
                li
                  a(href="/blog/list?status=review") review
                li 
                  a(href="/blog/list?status=trash") trash
                li 
                  a(href="/blog/list?status=published") published
                li.divider
                li.dropdown-header Action
                li
                  a(href="/blog/create") Create Blog
                

          ul.nav.navbar-nav.navbar-right            
             if user
                li 
                  a(href='http://www.openstreetmap.org/user/#{user.displayName}') #{user.displayName}
              else
                li  
                  a(href='./') Anonymous
        // /.nav-collapse
  

    .container
        
        p
         block content
        p
          
    // /container
    
    // Bootstrap core JavaScript
    // ==================================================
    // Placed at the end of the document so the pages load faster
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')

