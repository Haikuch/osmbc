extends layout




block content

  row
    div
      table.table.table-striped
        thead
          tr 
            th
             | title
            th
             | blog
            th
             | category
            th
             | collection
            th
             | markdown
            th
             | markdownEN
         tbody
          each article in articles
            tr
              td
                a(href='#{layout.htmlroot}/article/' + article.id) #{(article.displayTitle())}
              td= article.blog
              td= article.category
              td= layout.util.shorten(article.collection) 
              td= layout.util.shorten(article.markdown) 
              td= layout.util.shorten(article.markdownEN) 
               


  