extends layout

block content
  .row
    .col-md-4
        h2.hidden-xs
          | Welcome to OSM BC
        h2.visible-xs
          | OSM BC
        .row 
          p
            | See recent blogs to work on below. If you just want to collect an article or an idea, use the collect menu on in the navbar.
            | Please to not forget to search for your Idea entering.
        .row
          h3
            | Blogs to work on
            a(href="#{layout.htmlroot}/blog/list?status=IN('open','edit')") (more)

        .row
          table.table.table-condensed
            for editBlog in layout.editBlog
              tr
                td
                  a(href="#{layout.htmlroot}/blog/#{editBlog.name}")=editBlog.name
                for l in layout.activeLanguages
                  td
                    if (editBlog["close" + l])
                      div.label.osmbclabel-closedblog
                        span.glyphicon.glyphicon-ok
                    else if (editBlog["reviewComment"+l])
                      div.label.osmbclabel-reviewblog=editBlog["reviewComment"+l].length
                    else
                      div.label.osmbclabel-editblog=l
            for openBlog in layout.listOfOpenBlog
              tr
                td
                  a(href="#{layout.htmlroot}/blog/#{openBlog.name}")=openBlog.name
                for l in layout.activeLanguages
                  td
                    div.label.osmbclabel-openblog=l



        .row
          h4="Current Users"
          p
            table.table
              for user,i in activeUserList
                tr
                  td=user.OSMUser +" "
                  td.text-muted=layout.moment(user.lastAccess).fromNow()
        .row
          h4="Visitors Today"
          p
            table.table
              tr
                td
                  for user,i in visitorsToday
                    span=user.OSMUser + ", "

        .row
          h4="Admin View"
          a(href="#{layout.htmlroot}/osmbc/admin") click here
    .col-md-8.hidden-xs
      if changes
        h4="Last Changes "
          - var d = new Date();
          - d= d.toISOString();
          - d= d.substring(0,7);
          a(href="#{layout.htmlroot}/changes/log?date="+d)  (more)
        div
          table.table.table-striped.table-condensed.table-responsive
            thead
              tr 
                th
                 | 
                th
                 | blog
                th
                 | user
                th
                 | table
                th
                 | what
                th
                 | Change
                th
                 | when
            tbody
              each change, i in changes
                tr
                  td
                    a(href='#{layout.htmlroot}/changes/' + change.id) 
                      span.glyphicon.glyphicon-info-sign
                  td= change.blog
                  td= change.user
                  td= change.table
                  td= change.property
                  td
                    :verbatim
                      !{change.htmlDiffText(40)}
                  td= layout.moment(change.timestamp).fromNow()
        div
          p
            |only displaying changes 
            span.osmbc-inserted
              |inserted text 
            span.osmbc-deleted
              |removed text

  div.footer