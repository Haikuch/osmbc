extends layout




block content
  
  div
    p
      form(name="search", action="/article/searchandcreate", method="get")
        .row
          .col-md-2
            
          .col-md-6
            textarea.form-control(name="search",rows=1) #{search}

          .col-md-2
            input(type="submit", class="btn btn-primary",value="Search")

  .row
    if (foundArticles) 
      if (foundArticles.length>0)
        p
          a(style={color:'Gray'}) 
            | #{foundArticles.length} articles found.
        p
          table.table.table-striped
            each  article in foundArticles
              tr
                td
                  | #{article.blog} <br>
                  | #{article.category}
                td
                  :verbatim
                    !{article.preview(true)}
      else
        p
          a(style={color:'Gray'}) 
            | No Articles found for search '#{search}'
  div 
    h2 
      | Create Article 
    form(name="input", action="/article/create", method="post")
      .row
        .col-md-1
          | Blog <br>
        .col-md-5
          select(id="blog",name="blog").form-control
            if (layout.listOfOpenBlog)  
              for blogName in layout.listOfOpenBlog         
                option(value="#{blogName}" ) #{blogName}
            option(value="Future") Future
            option(value="Trash") Trash
        .col-md-5
          

        .col-md-1
          input(type="submit", class="btn btn-primary",value="OK")
          


      .row
        .col-md-1
          | Category <br>
        .col-md-5
          select(id="category",name="category").form-control
            if (layout.categories)
              for category in layout.categories
                option(value="#{category.DE}" ) #{category.DE} / #{category.EN}
        .col-md-5
          h2
            | 

      .row
        .col-md-1
          | Title <br>
        .col-md-10
          textarea.form-control(name="title",rows=1)
             
      .row
        .col-md-1
          | Collection <br>
        .col-md-10
          textarea.form-control(name="collection",rows=7) 

       
                





