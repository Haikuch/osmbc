extends layout




block content
  row
    .col-md-8
      if (blog.status != "help")
        h1= "Preview "+blog.name
    .col-md-4
      div.btn-group(role="group" class="pull-right")
        button.btn.btn-default.btn-lg
          a(href="#{layout.htmlroot}/blog/#{blog.id}/?edit=true&lang=#{lang}") Edit 
        button.btn.btn-default.btn-lg
          a(href="#{layout.htmlroot}/blog/#{blog.id}/preview?download=true&lang=#{lang}") Download

  row
    .col-md-12
      if (preview)
        :verbatim
          !{preview}
 




  