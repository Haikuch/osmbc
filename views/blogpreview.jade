extends layout




block content
  row
    .col-md-8
      if (blog.status != "help")
        if (markdown)
          h1= "Markdown "+blog.name
        else
          h1= "Preview " + blog.name
    .col-md-4
      div.btn-group(role="group" class="pull-right")
        button.btn.btn-default.btn-lg(onclick ="location.href='#{returnToUrl}';") Edit
        button.btn.btn-default.btn-lg(onclick ="location.href='#{layout.htmlroot}/blog/#{blog.id}/preview?download=true&lang=#{lang}';") Download

  row
    .col-md-12
      if (markdown)
        pre
          | #{preview}
      else
        :verbatim
          !{preview}
   




  