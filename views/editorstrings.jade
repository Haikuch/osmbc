extends config

block showContentOfConfig
  - lang = layout.language
  if config.json
    .row
      .col-md-3
      .col-md-6
        h2="Blog"
        ul
          li="Some Demo Text"

        p
          if (config.json[lang])
            :verbatim
              !{config.json[lang].replace("##team##","Person1, Person2, Person3")}
          else
            | No String for language #{lang}
